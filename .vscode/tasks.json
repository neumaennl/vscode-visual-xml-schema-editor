// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile-extension",
      "group": "build",
      "problemMatcher": "$tsc",
      "label": "npm: compile-extension",
      "detail": "tsc -p ./tsconfig.json"
    },
    {
      "type": "npm",
      "script": "compile-webview",
      "group": "build",
      "label": "npm: compile-webview"
    },
    {
      "label": "Build All",
      "dependsOn": [
        "npm: compile-extension",
        "npm: compile-webview"
      ],
      "dependsOrder": "parallel",
      "group": "build"
    },
    {
      "type": "npm",
      "script": "watch-extension",
      "group": "build",
      "problemMatcher": "$tsc-watch",
      "label": "npm: watch-extension",
      "isBackground": true
    },
    {
      "type": "npm",
      "script": "watch-webview",
      "group": "build",
      "label": "npm: watch-webview",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "\\[tsl\\] ERROR in ((\\/[\\w-]+)+\\.ts)\\((\\d+,\\d+)\\)\\n\\s+(.*)",
          "file": 1,
          "location": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "webpack \\d\\.\\d+\\.\\d compiled .*"
        }
      }
    },
    {
      "label": "Watch All",
      "dependsOn": [
        "npm: watch-extension",
        "npm: watch-webview"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}