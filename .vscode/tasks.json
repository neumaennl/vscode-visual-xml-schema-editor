{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "group": "build",
      "problemMatcher": "$tsc",
      "label": "npm: compile",
      "detail": "tsc -p ./tsconfig.json"
    },
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build",
      "label": "npm: watch"
    },
    {
      "type": "npm",
      "script": "compile-webview",
      "problemMatcher": [],
      "group": "build",
      "label": "npm: compile-webview"
    },
    {
      "label": "Build All",
      "dependsOn": [
        "npm: compile",
        "npm: compile-webview"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}