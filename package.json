{
  "name": "xml-schema-visual-editor",
  "displayName": "XML Schema Visual Editor",
  "description": "Visual editor for XML schemas with diagram view",
  "version": "0.0.1",
  "publisher": "neumaennl",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/src/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "xmlSchemaVisualEditor.editor",
        "displayName": "XML Schema Visual Editor",
        "selector": [
          {
            "filenamePattern": "*.xsd"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "xmlSchemaVisualEditor.openEditor",
        "title": "Open in XML Schema Visual Editor"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .xsd",
          "command": "xmlSchemaVisualEditor.openEditor",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile-extension && npm run compile-webview",
    "compile-extension": "tsc -p ./tsconfig.json",
    "compile-webview": "webpack --mode production",
    "watch": "concurrently \"npm run watch-extension\" \"npm run watch-webview\"",
    "watch-extension": "tsc -watch -p ./tsconfig.json",
    "watch-webview": "webpack --mode development --watch",
    "pretest": "npm run compile",
    "package": "vsce package",
    "clean": "rimraf out webview"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.22.0",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.8.1",
    "rimraf": "^6.1.2",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.0",
    "typescript": "^5.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@neumaennl/xmlbind-ts": "^0.9.0"
  }
}
