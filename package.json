{
  "name": "xml-schema-visual-editor",
  "displayName": "XML Schema Visual Editor",
  "description": "Visual editor for XML schemas with diagram view",
  "version": "0.0.1",
  "publisher": "neumaennl",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/src/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "xmlSchemaVisualEditor.editor",
        "displayName": "XML Schema Visual Editor",
        "selector": [
          {
            "filenamePattern": "*.xsd"
          }
        ],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "xmlSchemaVisualEditor.openEditor",
        "title": "Open in XML Schema Visual Editor"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .xsd",
          "command": "xmlSchemaVisualEditor.openEditor",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "XML Schema Visual Editor",
      "properties": {
        "xmlSchemaVisualEditor.showDocumentation": {
          "type": "boolean",
          "default": false,
          "description": "Show documentation annotations in the diagram"
        },
        "xmlSchemaVisualEditor.alwaysShowOccurrence": {
          "type": "boolean",
          "default": false,
          "description": "Always show occurrence constraints (minOccurs/maxOccurs) even for default values (1..1)"
        },
        "xmlSchemaVisualEditor.showType": {
          "type": "boolean",
          "default": false,
          "description": "Show type information for elements in the diagram"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile-extension && npm run compile-webview",
    "compile-extension": "tsc -p ./tsconfig.json",
    "compile-webview": "webpack --mode production",
    "watch": "concurrently \"npm run watch-extension\" \"npm run watch-webview\"",
    "watch-extension": "tsc -watch -p ./tsconfig.json",
    "watch-webview": "webpack --mode development --watch",
    "pretest": "npm run compile",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "package": "vsce package",
    "clean": "rimraf out webview",
    "generate-classes-from-schema": "node node_modules/.bin/xsd2ts xsd2ts -i schema/XMLSchema.xsd -o shared/generated"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vscode/vsce": "^3.7.1",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.1",
    "eslint-plugin-jest": "^29.2.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-junit": "^16.0.0",
    "rimraf": "^6.1.2",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@neumaennl/xmlbind-ts": "^0.13.0"
  }
}
