{
	"compilerOptions": {
        "experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ES6",
		"outDir": "out",
		"sourceMap": false,
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"rootDir": "src",
		"esModuleInterop": true,
        "noUnusedLocals": true,
        "noImplicitOverride": true,
        "skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
		"lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "node",
            "vscode"
        ]
	},
	"include": [
	  "src/**/*.ts"
	],
	"exclude": [
		"src/webview/**/*.ts",
	]	
}
