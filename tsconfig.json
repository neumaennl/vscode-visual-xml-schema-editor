{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "out",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "rootDirs": [
      "src",
      "shared"
    ],
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "shared/*": [
        "shared/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "webview-src",
    "webview",
    "out",
    "**/*.test.ts",
    "**/__tests__/**"
  ]
}